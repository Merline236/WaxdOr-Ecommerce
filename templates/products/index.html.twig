{% extends 'base.html.twig' %}

{% block title %}Hello ProductsController!{% endblock %}

{% block body %}


<div class="example-wrapper">
    <h1>Les Listes des produits</h1>
    {% for category in categories %}
                {% if category.parent == null %}
                    <div class="col-md-6">
                        <h2>{{category.name}}</h2>
                    </div>
                {% else %}
                    <div class="col-md-6">
                        <div class="card h-100">
                            {# <img src="..." class="card-img-top" alt="..."> #}
                            <div class="card-body">
                                <h3 class="card-title">{{category.name}}</h3>
                                {# Chemin controller = categories_list on fait une concatenation pour relier notre categorie a la liste #}
                                <a href="{{path('categories_list', {slug: category.slug}) }}" class="btn btn-primary">Voir les produits</a>
                            </div>
                        </div>
                        <a href="#"></a>
                    </div>
                {% endif %}
            {% endfor %}
</div>
{% endblock %}
